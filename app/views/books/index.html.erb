<html>
  <head>
    <meta charset="UTF-8">
    <title>book_memo</title>
    <link rel="stylesheet" href="index.css">
  </head>
  <body>
    <header>
      <div class = "heading">
       <h1 class = "title"><a href= "/"> <%= image_tag 'logo.png' %></a></h1>
      </div>
      <div class = "navbar">
        <ul class='nav-lists'>
          <% if user_signed_in? %>
             <li><button type="button" class = "btn-border"> <%= link_to current_user.nickname, "/users/#{current_user.id}", class: "user-nickname" %></button> </li> 
             <li><button type="button" class = "btn-border"> <%= link_to 'ログアウト', "/users/sign_out", method: :delete, class: "logout" %></button> </li>
           <% else %>
            <li><button type="button" class = "btn-border" ><%= link_to 'ログイン', "/users/sign_in", class: "login" %></button></li>
            <li><button type="button" class = "btn-border"><%= link_to 'サインイン', "/users/sign_up", class: "sign-up" %></button></li>
          <% end %> 
        </ul>
      </div>
    </header>
      <div class="contact">
        <form class = "contact-form">
        <div class = "fade">
            <%# <input type="text" placeholder="本のタイトルは？" class="name_form"> %>
            <%# <%= form_tag books_path, :method => 'get' do %> 
            <%# <p> %>
            <%# <%= text_field_tag :search, params[:search] %>
            <%# <%= submit_tag 'Search', :name => nil %> 
            <%# </p>
            <% end %> 
            <p class = "search">本の名は?</p>
            <%= search_form_for @q, url: search_path do |f| %>
              <%# # 名前を含む検索 %>
              <%= f.search_field :name_cont %>
              <p>検索</p>
              <%= f.submit '検索' %>

             <%# ログインしている場合 %>
             <p>検索結果</p>
             <div class = "ans">
              <% if @books.length != 0 %>
                <% @books.find do |book|%>
                    <%= link_to book.name, book_path(book.id), class: "ffff"%>
                <% end %>
              <% else %>
                <% if user_signed_in?%>
                  <%= link_to '本が見つかりません。新しく追加しましょう！', new_book_path, class: "ffff" %>
                <% else %>
                  <%= link_to '本が見つかりません。新規登録して本を追加しましょう！', new_user_registration_path, class: "ffff" %>
                <% end %>
              <% end %>
            <% end %>
            </div>
        </div>
        </form>
      </div>
      <footer>
      <p class = "footer">©︎book_memo</p>
      </footer>
  </body>
</html>
